{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    // for absolute path
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    // for import
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true

  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },


  "include": [
    "./config/jest/setupTests.ts"
  ],
  "ignorePatterns": ["./.eslintrc.js"]
}